{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "module": "commonjs",
    "outDir": "../../../dist/apps/backend/vendor-service",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/auth": ["libs/shared/auth/src/index"],
      "@shared/config": ["libs/shared/config/src/index"],
      "@shared/constants": ["libs/shared/constants/src/index"],
      "@shared/error": ["libs/shared/error/src/index"],
      "@shared/kafka": ["libs/shared/kafka/src/index"],
      "@shared/logger": ["libs/shared/logger/src/index"],
      "@shared/middlewares": ["libs/shared/middlewares/src/index"],
      "@shared/redis": ["libs/shared/redis/src/index"],
      "@shared/minio": ["libs/shared/minio/src/index"],
      "@shared/email": ["libs/shared/email/src/index"],
      "@shared/swagger": ["libs/shared/swagger/src/index"],
      "@shared/types": ["libs/shared/types/src/index"],
      "@shared/utils": ["libs/shared/utils/src/index"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
